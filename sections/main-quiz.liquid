<section class="QuizGridSection Section">
  <div class="QuizGridWrapper">
    {%- for block in section.blocks -%}
      {%- if block.settings.heading and block.settings.link != blank -%}
      <div class="QuizItem__Wrapper">
        <a href="{{ block.settings.link }}">
          <div class="QuizItem__Content">
            {%- if block.settings.heading != blank -%}
              <h3 class="SectionHeader__SubHeading Heading">{{ block.settings.heading | escape }}</h3>
            {%- endif -%}

            {%- if block.settings.blurb != blank -%}
              <div class="SectionHeader__Description Rte">
                  {{ block.settings.blurb }}    
              </div>
            {%- endif -%}          
          </div>
        </a>	
      </div>     
      {%- endif -%}
    {% endfor %}
  </div>
</section>

<style>
  .QuizGridSection {
    margin: 3%;
  }
  
  .QuizGridWrapper {
    display: grid;
    justify-content: center;
    grid-template-columns: minmax(150px, auto);
  }
  
  .QuizItem__Wrapper {
    border: 1px solid black;
    margin: 10px;
    border-radius: 20px;
  }
  
  .QuizItem__Content {
    text-align: center;
    padding: 1.53em;  
  }
  
  .QuizItem__Content .Heading {
    font-family: "DIN Neuzeit Grotesk", sans-serif;
    font-weight: bold;
    text-transform: uppercase;
    color: #352014;
    font-size: 18px;
  }
  
  .QuizItem__Content p {
    font-size: 16px;
    line-height: 22.4px;
    font-family: "sofia pro", sans-serif;
    font-weight: 400;
    color: #352014;
  }
  
  @media screen and (min-width: 435px) {
    .QuizGridWrapper {
      grid-template-columns: repeat(2, minmax(150px, auto));
    }
  }
  
  @media screen and (min-width: 650px) {
    .QuizGridWrapper {
      grid-template-columns: repeat(3, minmax(150px, auto));
    }
  }
</style>

{% schema %}
{
  "name": "Main Quiz Page",
  "max_blocks": 10,
  "settings": [],
  "blocks": [
    {
      "type": "quiz",
      "name": "Quiz",
      "settings": [
		{
	   	  "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Product Quiz"

		},
        {
          "type": "richtext",
          "id": "blurb",
          "label": "Blurb",
          "default": "<p>Share what your customers are saying about your products, your company...</p>"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Main Quiz Page",
      "settings": {}
    }
  ]
}
{% endschema %}